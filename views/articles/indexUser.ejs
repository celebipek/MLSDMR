<script>
    const htmlContent = '<div class="card-text mb-2">Bu bir örnek metin.</div>'; // Verilen HTML içeriği
const maxLength = 10; // Kısıtlamak istediğimiz maksimum karakter sayısı

// DOM elemanı oluşturarak içeriği alın
const tempDiv = document.createElement('div');
tempDiv.innerHTML = htmlContent;
const textContent = tempDiv.textContent || tempDiv.innerText;

// Metin içeriğini belirli karakter sayısına kadar kırpın
const truncatedContent = textContent.slice(0, maxLength);
</script>
